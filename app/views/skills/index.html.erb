<div class="container relative pt-14">

  <div class="mb-28">
    <div class="mb-14">
      <h1 class="mb-5">Software Development</h1>
      <div class="grid grid-cols-3 gap-4">
        <% @skills[0].topics.each do |topic| %>
          <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= topic %></h3></div>
        <% end %>
      </div>
    </div>

    <div class="mb-10">
      <h2 class="mb-3">Languages</h2>
      <div class="grid grid-cols-4 gap-4">
        <% @skills[0].languages.each do |language| %>
          <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= language %></h3></div>
        <% end %>
      </div>
    </div>

    <div>
      <h2 class="mb-3">Tools</h2>
      <div class="grid grid-cols-4 gap-4">
        <% @skills[0].tools.each do |tools| %>
          <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= tools %></h3></div>
        <% end %>
      </div>
    </div>

  </div>

  <div class="mb-40">

    <div class="mb-14">
      <h1 class="mb-5">Product Design</h1>
      <div class="grid grid-cols-3 gap-4">
        <% @skills[1].topics.each do |topic| %>
          <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= topic %></h3></div>
        <% end %>
      </div>
    </div>

    <h2 class="mb-3">Tools</h2>
    <div class="grid grid-cols-4 gap-4">
      <% @skills[1].tools.each do |tools| %>
        <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= tools %></h3></div>
      <% end %>
    </div>

  </div>

</div>
