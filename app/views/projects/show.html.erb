<div class="mx-6 container relative md:pt-14">

  <%# Header %>
  <div class="w-full flex flex-col lg:flex-row">
    <div class="order-2 w-full lg:w-2/4 flex justify-center">
      <%= image_tag @project.images[0], class: "rounded-3xl max-h-[500px]	" %>
    </div>
    <div class="order-1 w-full lg:w-2/4 lg:pt-24 xl:pt-32 lg:pl-3">
      <h1 class="text-5xl sm:text-7xl font-bold mb-5"><%= @project.title %></h1>
      <h2 class="text-2xl md:text-3xl leading-10 lg:mb-6"><%= @project.sub_title %></h2>
    </div>
  </div>

  <%# Project Details %>
  <div class="mb-6">
    <label for="accordion-1">
      <input type="checkbox" id="accordion-1" class="peer hidden">
      <div class="flex gap-6">
        <h2 class="text-xl mb-5">Project Role / Skills</h2>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2.5"
          stroke="currentColor"
          class="mt-1 h-6 w-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </div>
      <div class="hidden peer-checked:grid peer-checked:grid-cols-1 sm:peer-checked:grid-cols-2 md:peer-checked:grid-cols-4 peer-checked:gap-4">
        <% @project.details.each do |detail| %>
          <div class="p-2 flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-center text-lg"><%= detail %></h3></div>
        <% end %>
      </div>
    </label>
  </div>

  <div class="mb-20">
    <label for="accordion-2">
      <input type="checkbox" id="accordion-2" class="peer hidden">
      <div class="flex gap-6">
        <h2 class="text-xl mb-5">Languages & Tools</h2>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2.5"
          stroke="currentColor"
          class="mt-1 h-6 w-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </div>
      <div class="hidden peer-checked:grid peer-checked:grid-cols-2 sm:peer-checked:grid-cols-3 lg:peer-checked:grid-cols-4 peer-checked:gap-4">
        <% @project.tools.each do |tool| %>
          <div class="p-2 flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-center text-lg"><%= tool %></h3></div>
        <% end %>
      </div>
    </label>
  </div>

  <%# Sections %>
  <div class="mt-10 mb-5 ">
    <h2 class="mb-3">Overview</h2>
    <h4 class="text-xl leading-8"><%= @project.content[0] %></h4>
  </div>

  <div>
    <div class="flex flex-col md:flex-row gap-4">
      <div class="flex items-center justify-center w-full md:w-2/4">
        <%= image_tag @project.images[1], class: "rounded-3xl max-h-[500px]	" %>
      </div>
      <div class="flex items-center justify-center w-full md:w-2/4">
        <%= image_tag @project.images[2], class: "rounded-3xl max-h-[500px]	" %>
      </div>
    </div>
  </div>

  <div>
    <h2 class="mb-3">Outcome</h2>
    <h4 class="text-xl leading-8"><%= @project.content[1] %></h4>
    <% if @project.link %>
    <h4 class="text-xl mt-8"><%= link_to "Check out the project here â†’ ", @project.link, class: "click-me hover:opacity-75" %></h4>
    <% end %>
  </div>

  <div class="my-12 lg:my-20">
    <div class="flex flex-col lg:flex-row gap-4">
      <div class="flex items-center justify-center w-full lg:w-2/4">
        <%= image_tag @project.images[3], class: "rounded-3xl max-h-[500px]	" %>
      </div>
      <div class="w-full lg:w-2/4">
        <h2 class="lg:mt-16 mb-5">Key Take Aways</h2>
        <h4 class="text-xl leading-8"><%= @project.content[2] %></h4>
      </div>
    </div>
  </div>

</div>
