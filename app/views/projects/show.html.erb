<div class="container relative pt-14">

  <%# Header %>
  <div class="w-full flex">
    <div class="w-2/4 pt-32 pl-3">
      <h1 class="text-7xl font-bold mb-5"><%= @project.title %></h1>
      <h2 class="mb-6"><%= @project.sub_title %></h2>
    </div>
    <div class="w-2/4 flex justify-center">
      <%= image_tag @project.images[0], class: "rounded-3xl max-h-[500px]	" %>
    </div>
  </div>

  <%# Project Details %>
  <div class="mb-6">
    <label for="accordion-1">
      <input type="checkbox" id="accordion-1" class="peer hidden">
      <div class="flex gap-6">
        <h2 class="text-xl mb-5">Project Role / Skills</h2>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2.5"
          stroke="currentColor"
          class="mt-1 h-6 w-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </div>
      <div class="hidden peer-checked:grid peer-checked:grid-cols-4 peer-checked:gap-4">
        <% @project.details.each do |detail| %>
          <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= detail %></h3></div>
        <% end %>
      </div>
    </label>
  </div>

  <div class="mb-20">
    <label for="accordion-2">
      <input type="checkbox" id="accordion-2" class="peer hidden">
      <div class="flex gap-6">
        <h2 class="text-xl mb-5">Key Tools</h2>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2.5"
          stroke="currentColor"
          class="mt-1 h-6 w-6">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </div>
      <div class="hidden peer-checked:grid peer-checked:grid-cols-4 peer-checked:gap-4">
        <% @project.tools.each do |tool| %>
          <div class="flex justify-center items-center w-full h-20 border-solid border-2 border-gray-800 rounded-lg hover:border-indigo-600 hover:border-4"><h3 class="text-lg"><%= tool %></h3></div>
        <% end %>
      </div>
    </label>
  </div>

  <%# Sections %>
  <div class="mt-10 mb-5 ">
    <h2 class="mb-3">Overview</h2>
